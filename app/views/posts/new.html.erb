<h1>Create a Post!</h1>

<% if @post.errors.any? %>
  <h2>
    <%= pluralize(@post.errors.count, 'error') %>
    prohibited this post from being saved:
  </h2>

  <ul>
    <% @post.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |form| %>
  <div>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.text_area :body, size: '40x8' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
